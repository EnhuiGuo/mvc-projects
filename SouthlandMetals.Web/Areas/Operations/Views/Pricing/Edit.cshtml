                                <td class="row">
                                    <div class="col-md-12">
                                        <div class="input-group" style="max-width:unset">
                                            <span class="input-group-addon glyphicon glyphicon-usd"></span>
                                            <input type="number" min="0" class="text-center form-control" data-bind="textInput: bucketValue" style="height: 30px;font-size: 12px;" />
                                        </div>
                                    </div>
                                </td>
