@model SouthlandMetals.Web.Areas.Operations.Models.ProjectViewModel

<div class="modal fade" data-keyboard="false" data-backdrop="static" id="editStatusModal" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
    <div class="modal-sm">
        <div class="modal-content">
            @Html.AntiForgeryToken()
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Edit Project Status: <span id="projectName"></span></h4>
            </div>
            <br />
            <div class="row">
                <div class="col-md-12 centered">
                    @Html.TextBoxFor(m => m.ProjectId, new { @id = "projectId", @class = "hidden" })
                    @Html.LabelFor(m => m.Status, new { @class = "control-label" })
                    &nbsp;&nbsp;
                    <div class="radio radio-danger radio-inline">
                        <input type="radio" id="open" name="Status" value="Open">
                        <label for="open" class="control-label">
                            Open
                        </label>
                    </div>
                    <div class="radio radio-danger radio-inline">
                        <input type="radio" id="hold" name="Status" value="On Hold">
                        <label for="hold" class="control-label">
                            On Hold
                        </label>
                    </div>
                    <div class="radio radio-danger radio-inline">
                        <input type="radio" id="canceled" name="Status" value="Canceled">
                        <label for="canceled" class="control-label">
                            Canceled
                        </label>
                    </div>
                </div>
            </div>
            <br />
            <div id="projectHoldDiv" class="row">
                <div class="col-md-12 centered">
                    <div class="col-md-12">
                        <div class="form-group">
                            @Html.LabelFor(m => m.HoldExpirationDate, new { @class = "col-md-3 control-label" })
                            <div class="col-md-9">
                                @Html.TextBoxFor(m => m.HoldExpirationDate, new { @id = "holdExpirationDate", @class = "form-control datepicker", @type = "text", @required = "required" })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            @Html.LabelFor(m => m.HoldNotes, new { @class = "col-md-3 control-label" })
                            <div class="col-md-9">
                                @Html.TextAreaFor(m => m.HoldNotes, new { @id = "holdNote", @rows = "5", @cols = "65", @style = "font-size: 13px;overflow-y: scroll;", @autofocus = "", @required = "required" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div id="projectCancelDiv" class="row">
                <div class="col-md-12 centered">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(m => m.CancelNotes, new { @class = "col-md-4 control-label" })
                            <div class="col-md-8">
                                @Html.TextAreaFor(m => m.CancelNotes, new { @id = "cancelNote", @rows = "5", @cols = "65", @style = "font-size: 13px;overflow-y: scroll;", @autofocus = "", @required = "required" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <br />
            <div class="modal-footer">
                <button id="updateStatusBtn" class="btn btn-sm modal-save-update-btn" title="Update Status">Update</button>
                <button id="cancelEditStatusBtn" class="btn btn-sm btn-default" type="button" data-dismiss="modal" title="Cancel Updating Status">Cancel</button>
            </div>
        </div>
    </div>
</div>
