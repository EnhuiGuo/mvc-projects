@model SouthlandMetals.Web.Areas.Operations.Models.CreditMemoViewModel

<div class="row" style="padding: 0;">
    <nav id="partsNav" class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav pull-right" style="padding-top: 10px;">
                    <li><i class="glyphicon glyphicon-envelope"></i><span data-toggle="modal" data-target="#emailModal" class="nav-icon" title="Email">Email </span></li>
                    <li><i class="glyphicon glyphicon-print"></i><span id="printMemoBtn" class="nav-icon" title="Print">Print </span></li>
                </ul>
            </div>
        </div>
    </nav>
</div>
<div class="panel panel-default" style="margin-bottom:5px;max-width:2000px;margin:auto">
    <div class="panel-heading" style="background-color: white">
        <div class="clearfix">
            <h3 class="panel-title text-noticed">
                @Model.CreditMemoNumber - "Detail"
            </h3>
        </div>
    </div>
    <div class="panel-body">
        <fieldset>
            <div class="row">
                <div class="col-md-12">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(m => m.CreditMemoDateStr, new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                @Html.TextBoxFor(m => m.CreditMemoDateStr, new { @id = "creditMemoDate", @class = "form-control", @type = "text", @readonly = "readonly" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.CustomerName, new { @class = "control-label col-md-4" })
                            <div class="col-md-6">
                                @Html.TextBoxFor(m => m.CustomerName, new { @id = "customerName", @class = "form-control", @readonly = "readonly" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.SalespersonName, new { @class = "control-label col-md-4" })
                            <div class="col-md-6">
                                @Html.TextBoxFor(m => m.SalespersonName, new { @id = "salespersonName", @class = "form-control", @readonly = "readonly" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-12">
                    <div class="col-md-4">
                        <div class="form-group">
                            @Html.LabelFor(m => m.CreditMemoNotes)
                            @Html.TextAreaFor(m => m.CreditMemoNotes, new { @id = "notes", @class = "form-control", @style = "font-size: 13px;overflow-y: scroll;", cols = "35", rows = "8", @readonly = "readonly" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <div class="panel panel-default">
                                <div class="panel-heading clearfix" style="background-color: white" data-toggle="collapse" href="#partCollapse">
                                    <h5>
                                        Items
                                        <i class="glyphicon glyphicon-menu-down pull-right panel-icon"></i>
                                    </h5>
                                </div>
                                <div id="partCollapse" class="panel-collapse collapse in">
                                    <div class="panel-body">
                                        <div class="row">
                                            <div class="col-md-12 col-sm-12 col-xs-12">
                                                <table id="creditMemoItems" class="table table-bordered table-hover table-responsive responsive compact nowrap"></table>
                                                <div class="col-md-12 col-sm-12 col-xs-12">
                                                    <p class="pull-right" style="font-size: 18px;"><strong>Total Price: <span id="creditAmount" class="text-info">@Model.CreditAmount</span></strong></p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </fieldset>
    </div>
</div>

<script>
    var creditMemoId = @Html.Raw(Json.Encode(Model.CreditMemoId));
    var debitMemoId = @Html.Raw(Json.Encode(Model.DebitMemoId));
    var creditMemoNumber = @Html.Raw(Json.Encode(Model.CreditMemoNumber));
    var creditMemoDateStr = @Html.Raw(Json.Encode(Model.CreditMemoDateStr));
    var customerId = @Html.Raw(Json.Encode(Model.CustomerId));
    var salespersonId = @Html.Raw(Json.Encode(Model.SalespersonId));
    var items = @Html.Raw(Json.Encode(Model.CreditMemoItems));
    var status = @Html.Raw(Json.Encode(Model.Status));
</script>

@section Scripts {
    @Scripts.Render("~/Scripts/southlandMetals-creditMemo-detail.js")
}




