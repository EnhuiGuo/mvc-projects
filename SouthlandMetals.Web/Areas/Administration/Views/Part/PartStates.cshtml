@model SouthlandMetals.Web.Areas.Administration.Models.PartStatusViewModel

<br />

<div class="row">
    <div class="col-md-10 centered">
        <div class="panel">
            <div class="panel panel-default">
                <div class="panel-heading clearfix">
                    <div class="panel-title">
                        Part Status
                        <div id="addPartStatus" class="pull-right">
                            <span id="addPartStatusBtn" class="glyphicon glyphicon-plus" title="Add Part Status"></span>
                            <span style="font-size: 14px;" title="Add Part Status"> Add Part Status</span>
                        </div>
                    </div>  
                </div>
                <div class="panel-body">
                    <table id="partStates" class="table table-bordered dt-responsive nowrap"></table>
                </div>
            </div>
        </div>
    </div>
    <div id="addPartStatusDiv">
        @{Html.RenderPartial("_AddPartStatus");}
    </div>
    <div id="editPartStatusDiv">
        @{Html.RenderPartial("_EditPartStatus");}
    </div>
</div>

<script type="text/javascript">
    var partStates = @Html.Raw(Json.Encode(Model.PartStates));
</script>

@section Scripts{
    @Scripts.Render("~/Scripts/southlandMetals-partStates.js")
}

