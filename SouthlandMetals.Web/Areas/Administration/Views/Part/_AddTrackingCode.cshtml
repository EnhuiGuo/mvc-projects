@model SouthlandMetals.Web.Areas.Administration.Models.TrackingCodeViewModel

<div class="modal fade" data-keyboard="false" data-backdrop="static" id="addTrackingCodeModal" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
    <div class="modal-sm">
        <div class="modal-content">
            @Html.AntiForgeryToken()
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Add Tracking Code</h4>
            </div>
            <div class="alert alert-success alert-dismissable alert-modal successAlert">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            </div>
            <div class="alert alert-danger alert-dismissable alert-modal errorAlert">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            </div>
            <br />
            <form id="addTrackingCodeForm">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            @Html.LabelFor(m => m.CustomerId, new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                @Html.DropDownListFor(m => m.CustomerId, Model.SelectableCustomers, new { @id = "customerId", @class = "form-control", @autofocus = "", @required = "required" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.TrackingCodeDescription, new { @class = "control-label col-md-4" })
                            <div class="col-md-6">
                                @Html.TextBoxFor(m => m.TrackingCodeDescription, new { @id = "trackingCodeDescription", @class = "form-control", @required = "required" })
                            </div>
                        </div>
                    </div>
                </div>
                @Html.HiddenFor(m => m.IsActive, new { @id = "isActive", @Value = true })
                <br />
                <div class="modal-footer">
                    <button id="saveTrackingCodeBtn" class="btn btn-sm modal-save-update-btn" type="submit" title="Save Tracking Code">Save</button>
                    <button id="cancelAddTrackingCodeBtn" class="btn btn-sm btn-default" type="button" data-dismiss="modal" title="Cancel Adding Tracking Code">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>


