@model SouthlandMetals.Web.Models.ManageViewModel

<br />

<div class="col-md-10 centered">
    <div class="panel">
        <div class="panel panel-default">
            <div class="panel-heading clearfix" style="background-color: white">
                <h3 class="panel-title" style="color: #333333;">
                    My Profile
                </h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-3">
                        <br />
                        <i class="glyphicon glyphicon-user" style="font-size: 30px;"></i><span style="font-size: 24px;"> @Model.FirstName @Model.LastName</span>
                    </div>
                    <div class="col-md-9">
                        <div id="editPassword" class="pull-right">
                            <span id="changePasswordBtn" class="glyphicon glyphicon-pencil" style="font-size: 12px;color: orange;" title="Edit Password"></span>
                            <span title="Edit Password"> Edit Password</span>
                        </div>
                    </div>
                </div>
                <br />
                <hr />
                <br />
                <div class="row">
                    <div class="col-md-6">
                        <h4>Personal</h4>
                        <div class="row">
                            <div class="col-md-offset-1">
                                <div class="row">
                                    <div class="col-md-2">
                                        Username:
                                    </div>
                                    <div class="col-md-4">
                                        <span>@Model.UserName</span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-2">
                                        Email:
                                    </div>
                                    <div class="col-md-4">
                                        <span>@Model.Email</span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-2">
                                        Phone:
                                    </div>
                                    <div class="col-md-4">
                                        <span>@Model.Phone</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <h4>Company</h4>
                        <div class="row">
                            <div class="col-md-offset-1">
                                <div class="row">
                                    <div class="col-md-3">
                                        Department:
                                    </div>
                                    <div class="col-md-4">
                                        <span>@Model.Department</span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-3">
                                        Position:
                                    </div>
                                    <div class="col-md-4">
                                        <span>@Model.Position</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <br />
                <hr />
                <br />
                <div class="row">
                    <div class="col-md-6">
                        <h4>Account Settings</h4>
                        <div class="row">
                            <div class="col-md-offset-1">
                                <div class="row">
                                    <div class="col-md-3">
                                        Authorizations:
                                    </div>
                                    @foreach (var item in Model.Roles)
                                    {
                                        <span>@item.RoleName </span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="changePasswordDiv">
        @{Html.RenderPartial("_ChangePassword");}
    </div>

</div>

@section Scripts{
    @Scripts.Render("~/Scripts/southlandMetals-manage.js")
}










